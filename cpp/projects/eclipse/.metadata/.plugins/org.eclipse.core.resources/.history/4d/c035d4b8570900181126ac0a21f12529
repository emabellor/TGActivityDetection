#include "ClassOpenPose.h"
#include <iostream>
#include <opencv2/core/core.hpp>
#include <opencv2/highgui/highgui.hpp>
#include <string>

using namespace std;
using namespace cv;

int main(int argc, char** argv) {
	cout << "Inicio de la aplicacion" << endl;
	cout << "Creando instancias" << endl;

	ClassOpenPose poseDetector;

	cout << "Inicializando openPose" << endl;
	poseDetector.InitOpenPose();

	string imagePath = "/home/mauricio/Pictures/test.jpg";

	if (argc > 2) {
		imagePath = string(argv[1]);
	}

	cout << "ImagePath: " << imagePath << endl;

	Mat image;
	image = imread(imagePath, CV_LOAD_IMAGE_COLOR);

	if (image.data == NULL) {
		cout << "Could not load image" << endl;
	} else {
		cout << "Extracting data" << endl;
		poseDetector.ExtractAndShow(image);

		cout << "Procedimiento finalizado";
	}
}
