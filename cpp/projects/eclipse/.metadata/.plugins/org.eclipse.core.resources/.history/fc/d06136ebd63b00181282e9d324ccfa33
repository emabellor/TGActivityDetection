#ifndef CLASSCAMCALIB_H_
#define CLASSCAMCALIB_H_

// OpenCV Includes
#include <opencv2/opencv.hpp>


class ClassCamCalib {
public:
	ClassCamCalib();
	virtual ~ClassCamCalib();

	cv::Point2f Project3DTo2D(cv::Point3f point, cv::Mat cameraMatrix, cv::Mat rvec, cv::Mat tvec, cv::Mat distorsion);
	cv::Point3f Project2DTo3D(cv::Point2f point, cv::Mat cameraMatrix, cv::Mat rvec, cv::Mat tvec, cv::Mat distorsion);
};

#endif /* CLASSCAMCALIB_H_ */
