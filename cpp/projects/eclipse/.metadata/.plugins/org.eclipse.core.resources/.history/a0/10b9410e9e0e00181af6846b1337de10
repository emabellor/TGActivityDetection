#ifndef CLASSPOSERESULTS_H_
#define CLASSPOSERESULTS_H_

#include <vector>
#include <sys/types.h>
#include <iostream>
#include <algorithm>

typedef struct {
	int person;
	int bodyPart;
	int x;
	int y;
	double score;
} StructPoints;

enum bodyParts {
	NOSE = 0,
	NECK = 1,
	R_SHOULDER = 2,
	R_ELBOW = 3,
	R_WRIST = 4,
	L_SHOULDER = 5,
	L_ELBOW = 6,
	L_WRITST = 7,
	R_HIP = 8,
	R_KNEE = 9,
	R_ANKLE = 10,
	L_HIP = 11,
	L_KNEE = 12,
	L_ANKLE = 13,
	R_EYE = 14,
	L_EYE = 15,
	R_EAR = 16,
	L_EAR = 17,
	BACKGROUND = 18
};

class ClassPoseResults {
public:
	ClassPoseResults();
	virtual ~ClassPoseResults();

	void AddResult(int person, int bodyPart, int x, int y, double score);
	void AddResult(StructPoints point);

	void ClearResults();
	int GetPeopleAmount();
	StructPoints GetPose(int person, int bodyPart);
	std::vector<StructPoints> GetAllPoints();
	std::vector<StructPoints> GetAllPointsByPerson(int person);
	static bool SortListCase(const StructPoints first, const StructPoints second);

private:
	std::vector<StructPoints> results;
};

#endif /* CLASSPOSERESULTS_H_ */
